{% extends 'base.html.twig' %}

{% block title %}Gestión de usuarios - OtakuNest{% endblock %}

{% block body %}
<h1 class="h2 fw-bold mb-4">Gestión de Usuarios</h1>

{% if users|length > 0 %}
<div class="glass-card p-4 table-responsive">
    <table class="table table-dark table-striped table-hover mb-0">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Registrado</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>
                    <strong>{{ user.username }}</strong>
                </td>
                <td class="text-muted">{{ user.email }}</td>
                <td class="text-muted">{{ user.firstName ?? '-' }} {{ user.lastName ?? '' }}</td>
                <td>
                    {% if user.roles is iterable %}
                        <span class="badge bg-secondary">{{ user.roles|first|replace({'ROLE_': ''}) }}</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ user.roles|replace({'ROLE_': ''}) }}</span>
                    {% endif %}
                </td>
                <td class="text-muted">{{ user.createdAt|date('d/m/Y') }}</td>
                <td>
                    {% if user.isActive %}
                    <span class="badge bg-success">Activo</span>
                    {% else %}
                    <span class="badge bg-danger">Inactivo</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-outline-warning">
                        <i class="fa-solid fa-edit"></i> Editar
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<div class="glass-card p-5 text-center">
    <i class="fa-solid fa-inbox fa-4x text-muted mb-4"></i>
    <h3 class="fw-bold mb-2">No hay usuarios</h3>
</div>
{% endif %}
{% endblock %}
