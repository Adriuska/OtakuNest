{% extends 'base.html.twig' %}

{% block title %}Panel de administración - OtakuNest{% endblock %}

{% block body %}
<div class="mb-4">
    <h1 class="h2 fw-bold">Panel de Administración</h1>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6">
        <div class="glass-card p-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted small mb-2">Total de usuarios</p>
                    <h3 class="fw-bold mb-0">{{ totalUsers }}</h3>
                </div>
                <i class="fa-solid fa-users fa-2x text-info opacity-50"></i>
            </div>
            <a href="{{ path('app_admin_users') }}" class="btn btn-outline-warning btn-sm mt-3 w-100">
                Gestionar usuarios
            </a>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="glass-card p-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <p class="text-muted small mb-2">Total de animes</p>
                    <h3 class="fw-bold mb-0">{{ totalAnimes }}</h3>
                </div>
                <i class="fa-solid fa-film fa-2x text-warning opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<!-- Usuarios recientes -->
<section>
    <h2 class="h3 fw-bold mb-4">Usuarios recientes</h2>
    
    <div class="glass-card p-4">
        {% if recentUsers|length > 0 %}
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Email</th>
                    <th>Registrado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for user in recentUsers %}
                <tr>
                    <td>
                        <strong>{{ user.username }}</strong>
                    </td>
                    <td class="text-muted">{{ user.email }}</td>
                    <td class="text-muted small">{{ user.createdAt|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-outline-warning">
                            Editar
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <p class="text-muted">No hay usuarios</p>
        {% endif %}
    </div>
</section>
{% endblock %}
